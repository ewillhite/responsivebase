name = responsivebase
description = Drupal 7 Custom Theme built as a responsive base for MCN
core = 7.x

stylesheets[all][] = css/normalize.css
stylesheets[all][] = css/mobile.css
stylesheets[screen and (min-width: 768px)][] = css/tablet.css
stylesheets[screen and (min-width: 1024px)][] = css/desktop.css
stylesheets-conditional[lt IE 9][all][] = css/ie.css

scripts[] = js/jquery.fitvids.js
scripts[] = js/script.js

regions[header] = Header
regions[highlighted] = Highlighted
regions[help] = Help
regions[content_top] = Content Top
regions[content] = Content
regions[aside] = Aside
regions[footer] = Footer
